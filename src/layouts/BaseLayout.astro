---
import "../styles/global.css";
import site from "../content/site.json";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { buildLocalBusinessSchema, buildWebsiteSchema, buildSchemaIds } from "../lib/schema";

const { title, description, canonical, noindex = false } = Astro.props;
const siteName = site.business.name;
const titleHasSiteName = typeof title === "string" && title.includes(siteName);
const pageTitle = title
  ? (titleHasSiteName ? title : `${title} | ${siteName}`)
  : `${siteName} | ${site.business.tagline}`;
const pageDescription = description ?? site.business.tagline;
const canonicalBase = "https://sitandgit.com";
const canonicalUrl = canonical ?? new URL(Astro.url.pathname, canonicalBase).toString();
const ogImage = `${canonicalBase}/images/og-default.svg`;
const { localBusinessId, websiteId } = buildSchemaIds(canonicalBase);
const businessSchema = buildLocalBusinessSchema(site, canonicalBase);
const websiteSchema = buildWebsiteSchema(site, canonicalBase, localBusinessId, websiteId);
const deployUrl = process.env.URL ?? "";
let deployHost = "";
try {
  if (deployUrl) deployHost = new URL(deployUrl).host;
} catch {
  deployHost = "";
}
const isNetlifyHost = deployHost.endsWith("netlify.app");
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    {(isNetlifyHost || noindex) && <meta name="robots" content="noindex, nofollow" />}
    <link rel="icon" href="/images/logo.png" />
    <link rel="apple-touch-icon" href="/images/logo.png" />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <script type="application/ld+json" set:html={JSON.stringify(businessSchema)}></script>
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)}></script>
    <slot name="head" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
