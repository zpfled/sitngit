---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/Section.astro";
import FAQList from "../components/FAQList.astro";
import QuoteSection from "../components/QuoteSection.astro";
import site from "../content/site.json";

const { pages, global_faq } = site;
---
<BaseLayout title={pages.faq.title} description={pages.faq.intro}>
  <section class="py-12 sm:py-16">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl sm:text-4xl font-display text-ink">{pages.faq.title}</h1>
      <p class="mt-4 text-ink/75">{pages.faq.intro}</p>
      <div class="mt-8">
        <FAQList items={global_faq} />
      </div>
    </div>
  </section>
  <QuoteSection />
</BaseLayout>
