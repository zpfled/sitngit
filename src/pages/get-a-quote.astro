---
import BaseLayout from "../layouts/BaseLayout.astro";
import QuoteFormExtended from "../components/QuoteFormExtended.astro";
import site from "../content/site.json";

const { pages, business } = site;
---
<BaseLayout title={pages.quote.title} description={pages.quote.intro}>
  <section class="py-12 sm:py-16">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl sm:text-4xl font-display text-ink">{pages.quote.title}</h1>
      <p class="mt-4 text-ink/75">
        {pages.quote.lede}{" "}
        <a href={`tel:${business.phone_tel}`} class="text-ink font-semibold hover:text-sage">
          {business.phone_display}
        </a>
        .
      </p>
      <div class="mt-8">
        <QuoteFormExtended buttonFullWidth={false} />
      </div>
    </div>
  </section>
</BaseLayout>
