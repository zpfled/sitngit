---
const { title, eyebrow, body } = Astro.props;
---
<section class="py-12 sm:py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    {eyebrow && <p class="text-xs uppercase tracking-[0.2em] text-moss mb-3">{eyebrow}</p>}
    {title && <h2 class="text-2xl sm:text-3xl font-display mb-4 text-center">{title}</h2>}
    {body && <p class="max-w-2xl">{body}</p>}
    <div class="mt-8">
      <slot />
    </div>
  </div>
</section>
