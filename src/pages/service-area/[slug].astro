---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/Section.astro";
import CTABlock from "../../components/CTABlock.astro";
import FAQList from "../../components/FAQList.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import site from "../../content/site.json";

const counties = site.service_area.counties;
const towns = counties.flatMap((county) =>
  county.towns.map((town) => ({ ...town, county }))
);

export function getStaticPaths() {
  const countyPaths = counties.map((county) => ({
    params: { slug: county.slug },
    props: { type: "county", county }
  }));

  const townPaths = towns.map((town, index) => ({
    params: { slug: town.slug },
    props: { type: "town", town, county: town.county, townIndex: index }
  }));

  return [...countyPaths, ...townPaths];
}

const { type, county, town, townIndex } = Astro.props;
const { pages, navigation, global_faq } = site;

const countyHeading = pages.county.heading_template.replace("{county}", county?.name ?? "");
const countyIntro = pages.county.intro.replace("{county}", county?.name ?? "");
const townHeading = pages.town.heading_template.replace("{town}", town?.name ?? "");

const sentenceVariants = pages.town.sentence_variants;
const firstSentence = sentenceVariants[townIndex % sentenceVariants.length];
const secondSentence = sentenceVariants[(townIndex + 1) % sentenceVariants.length];
const formattedFirst = firstSentence
  ?.replaceAll("{town}", town?.name ?? "")
  ?.replaceAll("{county}", county?.name ?? "");
const formattedSecond = secondSentence
  ?.replaceAll("{town}", town?.name ?? "")
  ?.replaceAll("{county}", county?.name ?? "");

const nearby = towns
  .filter((item) => item.slug !== town?.slug)
  .slice(0, 6);
---
<BaseLayout title={type === "county" ? countyHeading : townHeading} description={type === "county" ? pages.county.intro : formattedFirst}>
  <Section>
    <Breadcrumbs items={[{ label: type === "county" ? county.name : town.name, href: `/service-area/${type === "county" ? county.slug : town.slug}` }]} />
    <h1 class="mt-4 text-3xl sm:text-4xl font-display">{type === "county" ? countyHeading : townHeading}</h1>
  </Section>

  {type === "county" ? (
    <Section body={`${countyIntro} ${pages.county.uses}`}>
      {county.towns.length ? (
        <div class="flex flex-wrap gap-3 text-sm text-ink/70">
          {county.towns.map((countyTown) => (
            <a href={`/service-area/${countyTown.slug}`} class="hover:text-ink">{countyTown.name}</a>
          ))}
        </div>
      ) : (
        <p class="text-sm text-ink/70">{site.labels.no_towns_note}</p>
      )}
    </Section>
  ) : (
    <Section>
      <div class="space-y-4 max-w-3xl text-ink/75">
        <p>{formattedFirst}</p>
        <p>{formattedSecond}</p>
        <p>{pages.town.extra_sentence}</p>
      </div>
      <div class="mt-8">
        <h3 class="text-lg font-display">{pages.town.nearby_title}</h3>
        <div class="mt-3 flex flex-wrap gap-3 text-sm text-ink/70">
          {nearby.map((nearbyTown) => (
            <a href={`/service-area/${nearbyTown.slug}`} class="hover:text-ink">{nearbyTown.name}</a>
          ))}
        </div>
      </div>
    </Section>
  )}

  <Section title={pages.service_area.faq_title}>
    <FAQList items={global_faq} />
  </Section>

  <CTABlock
    title={type === "county" ? pages.county.cta.title : pages.town.cta.title.replace("{town}", town?.name ?? "")}
    body={type === "county" ? pages.county.cta.body : pages.town.cta.body}
    button={type === "county" ? pages.county.cta.button : pages.town.cta.button}
    href={navigation.cta_primary.href}
  />
</BaseLayout>
