---
import "../styles/global.css";
import site from "../content/site.json";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title, description, canonical } = Astro.props;
const pageTitle = title ? `${title} | ${site.business.name}` : `${site.business.name} | ${site.business.tagline}`;
const pageDescription = description ?? site.business.tagline;
const canonicalUrl = canonical ?? (Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : Astro.url.toString());
const ogImage = `${Astro.site ?? ""}/images/og-default.svg`;
const serviceAreas = (site.service_area?.counties ?? []).map((county) => `${county.name}, WI`);
const businessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  name: site.business.name,
  url: site.business.website ?? "https://sitandgit.com",
  telephone: site.business.phone_tel,
  image: `${Astro.site ?? ""}${site.business.logo?.src ?? "/images/logo.png"}`,
  priceRange: "$90-$150 per unit",
  areaServed: serviceAreas.map((area) => ({ "@type": "AdministrativeArea", name: area })),
  openingHoursSpecification: [
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
      opens: "08:00",
      closes: "17:00"
    }
  ],
  serviceType: "Portable restroom rentals"
};
const serviceTypes = [
  "Portable restroom rentals",
  "Wheelchair-accessible portable restroom rentals",
  "Handwash station rentals",
  "Portable toilet servicing"
];
const serviceSchemas = serviceTypes.map((serviceType) => ({
  "@context": "https://schema.org",
  "@type": "Service",
  serviceType,
  provider: {
    "@type": "LocalBusiness",
    name: site.business.name,
    telephone: site.business.phone_tel,
    url: site.business.website ?? "https://sitandgit.com"
  },
  areaServed: serviceAreas.map((area) => ({ "@type": "AdministrativeArea", name: area }))
}));
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="icon" href="/images/logo.png" />
    <link rel="apple-touch-icon" href="/images/logo.png" />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <script type="application/ld+json" set:html={JSON.stringify(businessSchema)}></script>
    {serviceSchemas.map((schema) => (
      <script type="application/ld+json" set:html={JSON.stringify(schema)}></script>
    ))}
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
