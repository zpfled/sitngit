---
const { title, summary, reviews } = Astro.props;
const stars = Array.from({ length: 5 });
const displayRating = typeof summary.rating === "number" ? summary.rating.toFixed(1) : summary.rating;
const summaryLabel = typeof summary.label === "string" ? summary.label.replace(/^Google\s+/i, "").trim() : "";
---
<section class="py-12 sm:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl sm:text-3xl font-display text-center">{title}</h2>

    <div class="mt-8 bg-fog border border-clay/70 rounded-2xl p-6 shadow-soft flex flex-col gap-6 sm:flex-row sm:items-center sm:justify-between">
      <div class="flex items-center gap-4">
        <div class="text-lg font-semibold">
          <span class="text-blue-500">G</span><span class="text-red-500">o</span><span class="text-yellow-500">o</span><span class="text-blue-500">g</span><span class="text-green-500">l</span><span class="text-red-500">e</span>
          {summaryLabel && <span class="text-ink"> {summaryLabel}</span>}
        </div>
      </div>
      <div class="flex items-center gap-4">
        <div class="text-2xl font-display text-ink">{displayRating}</div>
        <div class="flex items-center gap-1 text-amber-400" aria-hidden="true">
          {stars.map(() => (
            <svg class="h-5 w-5 fill-current" viewBox="0 0 20 20">
              <path d="M10 15.27l-5.18 3.03 1.39-5.9L1 7.97l6.06-.52L10 2l2.94 5.45 6.06.52-5.21 4.43 1.39 5.9z" />
            </svg>
          ))}
        </div>
        <div class="text-sm text-ink/60">({summary.count})</div>
      </div>
      <a href={summary.cta_href} class="inline-flex items-center justify-center rounded-full bg-ink text-fog px-6 py-2 text-sm font-semibold hover:bg-ink/90">
        {summary.cta_label}
      </a>
    </div>

    <div class="mt-8 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
      {reviews.map((review) => (
        <article class="bg-fog border border-clay/70 rounded-2xl p-6 shadow-soft">
          <div class="flex items-center gap-3">
            <div class="relative h-10 w-10 rounded-full bg-sage/20 text-sage flex items-center justify-center text-sm font-semibold overflow-hidden">
              <span>{review.initials}</span>
              {review.avatar && (
                <img
                  src={review.avatar}
                  alt=""
                  class="absolute inset-0 h-full w-full object-cover"
                  loading="lazy"
                  onerror="this.remove()"
                />
              )}
            </div>
            <div>
              <p class="font-semibold text-ink">{review.name}</p>
              <p class="text-xs text-ink/60">{review.time}</p>
            </div>
          </div>
          <div class="mt-4 flex items-center gap-1 text-amber-400" aria-hidden="true">
            {stars.map(() => (
              <svg class="h-4 w-4 fill-current" viewBox="0 0 20 20">
                <path d="M10 15.27l-5.18 3.03 1.39-5.9L1 7.97l6.06-.52L10 2l2.94 5.45 6.06.52-5.21 4.43 1.39 5.9z" />
              </svg>
            ))}
          </div>
          <p class="mt-3 text-sm text-ink/80">{review.text}</p>
          {review.url && (
            <a href={review.url} class="mt-3 inline-block text-sm font-semibold text-moss hover:text-moss/80">Read more</a>
          )}
        </article>
      ))}
    </div>
  </div>
</section>
